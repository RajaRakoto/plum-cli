{
  "name": "plum-cli",
  "version": "1.0.0",
  "description": "Elevate your web development with our Plum CLI: seamless integration, offline documentation, updates management, and expert tips ... ðŸ©·",
  "author": "Raja Rakotonirina <raja.rakoto7@gmail.com>",
  "license": "MIT",
  "type": "module",
  "module": "index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "plum-cli": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RajaRakoto/plum-cli.git"
  },
  "bugs": "https://github.com/RajaRakoto/plum-cli/issues",
  "files": [
    "dist"
  ],
  "keywords": [
    "plum",
    "cli",
    "css",
    "sass",
    "collection",
    "mixins",
    "toolkit",
    "scss",
    "styles"
  ],
  "engines": {
    "bun": ">= 1.0.0"
  },
  "scripts": {
    "start": "bun dist/index.js",
    "start:smol": "bun --smol dist/index.js",
    "start:bin": "./dist/plum-cli",
    "clean": "rimraf build dist coverage",
    "dev": "bun run src/index.ts",
    "dev:watch": "bun --watch run src/index.ts",
    "dev:hot": "bun --hot run src/index.ts",
    "dev:smol:watch": "bun --smol --watch run src/index.ts",
    "dev:smol:hot": "bun --smol --hot run src/index.ts",
    "build": "bun run build.js && grunt minify",
    "build:watch": "bun build src/index.ts --outdir dist --watch",
    "build:bin": "bun build --compile --minify --sourcemap src/index.ts --outfile dist/plum-cli && grunt minify",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "eslint": "eslint . --ext js,ts,js,mts --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --config .prettierrc --write .",
    "backup": "grunt backup",
    "pkg-check": "depcheck",
    "pkg-upgrade": "ncu --interactive --format group --packageManager bun",
    "versioning": "ungit",
    "version-major": "npm version major",
    "version-minor": "npm version minor",
    "version-patch": "npm version patch"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "figlet": "^1.7.0",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-htmlmin": "^3.1.0",
    "grunt-contrib-uglify": "^5.2.2",
    "inquirer": "^9.2.15",
    "node-emoji": "^2.1.3",
    "ora": "^8.0.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/execa": "^2.0.0",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node-emoji": "^2.1.0",
    "@types/ora": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "bun-plugin-dts": "^0.2.1",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "grunt": "^1.6.1",
    "grunt-contrib-compress": "^2.0.0",
    "jest": "^29.7.0",
    "load-grunt-tasks": "^5.1.0",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-api-utils": "^1.2.1",
    "ts-jest": "^29.1.2",
    "ungit": "^1.5.25"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
